<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1 class="text-center">Crea tu Perfil</h1>
    <p class="text-center">Estas a un paso de ser parte de la comunidad, llena tu Perfil.</p>
    <div class="well">
      <%= form_for @profile, url: user_profile_path do |f| %>
        <div class="form-group">
          <%= f.label :Nombre %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :Apellido  %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :Titulo %>
          <%= f.select :job_title, ['Developer', 'Entrepreneur', 'Investor'], {}, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :Telefono %>
          <%= f.text_field :phone_number, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :Email %>
          <%= f.text_field :contact_email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :Descripcion %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit "Crea tu Perfil", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>